%ol
  - @links.each do |link|
    %li
      = link_to link.title, link.url
      %br
      = link_to "Comments", link_comments_path(link)
      - if signed_in? && valid_vote?(link)
        = link_to "Upvote", votes_url(:link => link),
                          :method => :post, :class => "upvote"

= paginate @links, :theme => 'twitter-bootstrap'
